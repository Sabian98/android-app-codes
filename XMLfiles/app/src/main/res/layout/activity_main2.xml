<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taseef_pc.xmlfiles.Main2Activity"

    android:background="@mipmap/ic_launcher">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/lin1"
        android:weightSum="6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"


            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="DONATE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/donate_text"

                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="serif"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
           android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="User Name"
                android:ems="10"
                android:id="@+id/user_name"
                android:layout_weight="1"
                android:fontFamily="serif" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Type of organization(optional)"
                android:ems="10"
                android:id="@+id/organization"
                android:layout_weight="1"
                android:fontFamily="serif"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Address/Contact details"
                android:ems="10"
                android:id="@+id/address"
                android:layout_weight="1"
                android:fontFamily="serif" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Approximate no. of persons"
                android:ems="10"
                android:id="@+id/person_no"
                android:layout_weight="1"
                android:fontFamily="serif" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:hint="Expiry Date(Estimated)"
                android:id="@+id/exp_date"
                android:layout_weight="1"
                android:fontFamily="serif" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.09">

            <Button
                android:text="DONATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:background="@drawable/selector"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
