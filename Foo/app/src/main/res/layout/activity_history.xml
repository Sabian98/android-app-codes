<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taseef_pc.foo.History">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:weightSum="6"
            android:id="@+id/lin1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText23"
                android:layout_weight="1"
                android:hint="your ID"
                android:background="@drawable/round_text"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"

                android:ems="10"
                android:id="@+id/editText19"
                android:layout_weight="1"
                android:hint="Donated to/Accepted from"
                android:background="@drawable/round_text"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"

                android:ems="10"
                android:id="@+id/editText20"
                android:layout_weight="1"
                android:hint="Date"
                android:background="@drawable/round_text"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"

                android:ems="10"
                android:id="@+id/editText21"
                android:layout_weight="1"
                android:hint="Location"
                android:background="@drawable/round_text"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"

                android:ems="10"
                android:id="@+id/editText22"
                android:layout_weight="1"
                android:hint="Contact details"
                android:background="@drawable/round_text"/>

            <Button
                android:text="ADD TO ACTIVITIES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button13"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:weightSum="2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:layout_width="177dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txt11"
                    android:hint="Enter ID
                    "
                    android:layout_marginLeft="2dp"
                    android:fontFamily="serif"
                    android:background="@drawable/round_text"
                    android:layout_marginBottom="5dp"
                    tools:gravity="center" />

                <Button
                    android:text="See past activities"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonnn"
                    android:background="@drawable/selector"
                    android:textSize="18sp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
