<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"  >

        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#caa8b1" />
            <gradient android:angle="-90" android:startColor="#dcd0d3" android:endColor="#c6254d"  />
        </shape>


    </item>


    <item
        android:state_focused="true"  >

        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#bbbcda" />
            <gradient android:angle="-90" android:startColor="#8f86e7" android:endColor="#6469c9"  />
        </shape>

    </item>





    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fdd5dae7" />
            <gradient android:angle="-90" android:startColor="#70beb6" android:endColor="#5050f4" />
        </shape>
    </item>
</selector>