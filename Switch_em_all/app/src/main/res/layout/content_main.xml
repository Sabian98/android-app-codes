<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/color"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.taseef_pc.switch_em_all.MainActivity"
    android:visibility="visible">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLAY PUZZLE WITH    BACK CAMERA"
            android:id="@+id/textView"
            android:textSize="@dimen/abc_dropdownitem_icon_width"
            android:textStyle="bold"
            android:backgroundTint="#957575"
            android:focusableInTouchMode="true"
            android:textColor="#000000"
            android:typeface="monospace"
            android:textAlignment="center"
            android:layout_marginTop="96dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.14" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="3 x 3 GRID"
            android:id="@+id/bt5"

            android:layout_gravity="center_horizontal"
            android:layout_weight="0.14"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="#000000"
            android:shadowColor="#000000"
            android:onClick="btnclc2"
            android:background="@drawable/myrect"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="4 X 4 GRID"
            android:id="@+id/button2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:layout_gravity="center_horizontal"
            android:layout_weight="0.14"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="#000000"
            android:shadowColor="#000000"
            android:onClick="btnclc"
            android:background="@drawable/myrect"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="5 X 5 GRID"
            android:id="@+id/button4"

            android:layout_gravity="center_horizontal"
            android:layout_weight="0.14"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:textColorHighlight="#000000"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="#010101"
            android:singleLine="true"
            android:shadowColor="#000000"
            android:onClick="btn5clc"
            android:background="@drawable/myrect"/>

        <TextView
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:text="SPECIAL PUZZLE!!"
            android:id="@+id/textView2"
            android:textSize="@dimen/abc_dropdownitem_icon_width"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:typeface="monospace"
            android:textColor="#121010"
            android:singleLine="true" />

        <Button
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="SELFIE MODE"
            android:layout_marginTop="8dp"
            android:id="@+id/button5"
            android:background="@drawable/myrect"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/abc_action_bar_content_inset_material"
            android:textColorHighlight="#000000"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="#010101"
            android:singleLine="true"
            android:shadowColor="#000000"
            android:onClick="btn6clc" />

    </LinearLayout>

</RelativeLayout>
