<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taseef_pc.splash_screen_test.donateActivity"
    android:background="">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/lin1"
        android:weightSum="6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1502dp"
        android:layout_marginBottom="316dp">

        <LinearLayout
            android:orientation="horizontal"


            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="DONATE FOOD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/donate_text"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@color/abc_primary_text_disable_only_material_light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name"
                android:ems="9"
                android:id="@+id/name"
                android:layout_weight="1"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:fontFamily="serif" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Location"
                android:ems="9"
                android:id="@+id/location"
                android:layout_weight="1"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:fontFamily="serif" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Contact Details"
                android:ems="9"
                android:id="@+id/contact"
                android:layout_weight="1"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:fontFamily="serif" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Approximate No. of Person"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:ems="10"
                android:id="@+id/person_no"
                android:layout_weight="1"
                android:fontFamily="serif"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Expiry"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/date"
                android:layout_weight="1"
                android:fontFamily="serif" />




        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <Button

                android:text="SEARCH"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"

                android:background="@drawable/selector"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                />

            <Button

                android:text="DELETE"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:background="@drawable/selector"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@android:color/background_light"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
