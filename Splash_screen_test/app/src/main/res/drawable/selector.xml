<?xml version="1.0" encoding="utf-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true"  >

        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#37ca3e" />
            <gradient android:angle="-90" android:startColor="#70d26e" android:endColor="#043d17"  />
        </shape>


    </item>


    <item
        android:state_focused="true"  >

        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e8ecdf" />
            <gradient android:angle="-90" android:startColor="#859b78" android:endColor="#288116"  />
        </shape>

    </item>





    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fd97dc99" />
            <gradient android:angle="-90" android:startColor="#7fd985" android:endColor="#23be1b" />
        </shape>
    </item>



</selector>

